{
  "name": "electron-react",
  "version": "1.0.0",
  "description": "",
  "main": "./electron/index.js",
  "scripts": {
    "start": "webpack serve --config config/webpack.config.dev.js --hot",
    "build": "webpack --config config/webpack.config.prod.js",
    "build:electron": "webpack --config config/webpack.config.electron.js && webpack --config config/webpack.config.preload.js && npm run byte",
    "byte": "electron scripts/byte.js",
    "electron": "NODE_ENV=development concurrently \"npm run start \" \"wait-on http://localhost:9000 && electron electron/index.js\"",
    "pack": "electron-builder --config electron-builder.config.js --dir",
    "dev:win64": "npm run build && npm run build:electron && electron-builder --config electron-builder.config.js --windows --x64",
    "dev:mac": "npm run build && npm run build:electron && electron-builder --config electron-builder.config.js --mac --arm64 --x64",
    "test": "jest",
    "prepare": "husky install"
  },
  "author": "hyj",
  "packageManager": "pnpm@7.15.0",
  "keywords": [
    "electron",
    "react",
    "typescript"
  ],
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.5",
    "@babel/plugin-syntax-jsx": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@babel/runtime": "^7.16.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.9",
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/parser": "^5.7.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "babel-jest": "^29.1.2",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^6.5.0",
    "copy-webpack-plugin": "^10.2.0",
    "core-js": "^2.6.5",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.3.0",
    "dotenv-webpack": "^7.0.3",
