  "dependencies": {
    "bytenode": "^1.3.6",
    "electron-is-dev": "^1.2.0",
    "react": "^17.0.2",
    "@electron/remote": "^2.0.8",
    "react-dom": "^17.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,ts}": [
      "prettier --write",
      "eslint \"src/**/*.{ts,js,tsx,jsx}\" --fix"
    ]
  },
  "postinstall": "electron-builder install-app-deps"
}
